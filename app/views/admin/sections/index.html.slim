table.table-minimal
  thead
    tr
      th Name
      th Essay Count
      th Actions


  tbody
    - @sections.each do |section|
      tr
        td= section.name
        td sections.essays.count
        td
          = link_to 'Edit', edit_admin_section_path(section), class: :button
          button Delete

= content_for :actions
  = link_to 'Create Section', new_admin_section_path

